<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.chart.PieChart?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.budgetmate.BudgetController">

    <!-- Top Alanı - Başlık -->
    <top>
        <HBox alignment="CENTER" style="-fx-background-color: linear-gradient(to right, #283E51, #485563);">
            <padding>
                <Insets top="15" right="15" bottom="15" left="15"/>
            </padding>

            <Label text="BudgetMate - Bütçe Takibi"
                   style="-fx-font-size: 20px; -fx-text-fill: white; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <!-- Orta Alan - Ana İçerik -->
    <center>
        <VBox spacing="30" alignment="TOP_CENTER">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <!-- Bakiye Kutusu -->
            <HBox alignment="CENTER">
                <Label fx:id="totalBalanceLabel"
                       style="-fx-font-size: 26px; -fx-text-fill: #2e7d32; -fx-background-color: #e8f5e9; -fx-padding: 14 30 14 30; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(gaussian, lightgray, 4, 0, 2, 2);"/>
            </HBox>

            <!-- Form Alanı -->
            <HBox spacing="20" alignment="CENTER">
                <Label text="Kategori:"/>
                <ComboBox fx:id="categoryComboBox" promptText="Seçin" prefWidth="150"/>

                <Label text="Tutar:"/>
                <TextField fx:id="amountField" promptText="₺" prefWidth="100"/>

                <Label text="Tür:"/>
                <ComboBox fx:id="typeComboBox" promptText="Gelir/Gider" prefWidth="120"/>

                <Button fx:id="addButton" text="+ Ekle" onAction="#handleAddTransaction"
                        style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
            </HBox>

            <!-- İçerik Alanı: PieChart + Tablo -->
            <HBox spacing="30" alignment="TOP_CENTER">

                <!-- Sol: PieChart -->
                <VBox spacing="10" alignment="TOP_CENTER">
                    <Label text="Gelir / Gider Dağılımı"
                           style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <PieChart fx:id="budgetPieChart" prefWidth="320" prefHeight="320"/>
                </VBox>

                <!-- Sağ: Tablo -->
                <VBox spacing="10" style="-fx-background-color: #fdfdfd; -fx-padding: 12; -fx-border-color: #ddd; -fx-border-width: 1;">
                    <Label text="İşlem Geçmişi" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                    <TableView fx:id="transactionTable" prefWidth="640" prefHeight="320">
                        <columns>
                            <TableColumn fx:id="dateColumn" text="Tarih" prefWidth="150"/>
                            <TableColumn fx:id="categoryColumn" text="Kategori" prefWidth="160"/>
                            <TableColumn fx:id="amountColumn" text="Tutar" prefWidth="160"/>
                            <TableColumn fx:id="typeColumn" text="Tür" prefWidth="160"/>
                        </columns>
                    </TableView>
                </VBox>

            </HBox>
        </VBox>
    </center>

</BorderPane>
