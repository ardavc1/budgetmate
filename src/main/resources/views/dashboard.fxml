<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.budgetmate.DashboardController" prefWidth="1000.0" prefHeight="700.0">

    <!-- Üst Menü -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            <Label text="💼 BudgetMate" style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-weight: bold; -fx-font-family: 'Segoe UI';" />
        </HBox>
    </top>

    <!-- Sekmeli Ana İçerik -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" tabMinWidth="140" tabMaxWidth="250"
                 style="-fx-font-size: 15px; -fx-tab-min-height: 40px;">
            <tabs>

                <!-- Bütçe Takibi Sekmesi -->
                <Tab text="📈 Bütçe Takibi">
                    <AnchorPane>
                        <fx:include source="budget.fxml"/>
                    </AnchorPane>
                </Tab>

                <!-- Ajanda Sekmesi -->
                <Tab text="🗓️ Ajanda">
                    <AnchorPane>
                        <fx:include source="calendar.fxml"/>
                    </AnchorPane>
                </Tab>

            </tabs>
        </TabPane>
    </center>

    <!-- Alt Bilgi -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="12" right="10" bottom="12" left="10"/>
            </padding>
            <Label text="© 2025 BudgetMate - Developed by ardavc1" style="-fx-text-fill: #7f8c8d; -fx-font-size: 13px;"/>
        </HBox>
    </bottom>

</BorderPane>
