<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>


<?import javafx.geometry.Insets?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.budgetmate.DashboardController">
    <!-- Üst Menü -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" style="-fx-background-color: #2C3E50;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="📊 BudgetMate" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
        </HBox>
    </top>

    <!-- Sekmeli Ana İçerik -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" tabMinWidth="120" tabMaxWidth="200" style="-fx-font-size: 14px;">
            <tabs>
                <Tab text="🧾 Bütçe Takibi">
                    <BorderPane fx:id="budgetTabContent" />
                </Tab>
                <Tab text="🗓️ Ajanda">
                    <BorderPane fx:id="agendaTabContent" />
                </Tab>
            </tabs>
        </TabPane>
    </center>

    <!-- Alt Bilgi -->
    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1;">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="© 2025 BudgetMate - Developed by ardavc1" style="-fx-text-fill: #7f8c8d; -fx-font-size: 12px;" />
        </HBox>
    </bottom>
</BorderPane>
